    </script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['hour', '과속','신호위반','보행자 보호의무 위반', '중앙선 침범'],
            {% for hr, cnt1, cnt2, cnt3, cnt4 in every %}
                [{{hr}}, {{cnt1}}, {{cnt2}}, {{cnt3}}, {{cnt4}}],
            {% endfor %}
        ]);

        var options = {
          title: '시간별, 유형별 사고 발생 수 (2012-2018)',
          curveType: 'function',
          legend: { position: 'bottom' },
          hAxis: {
            title: 'Hour'
          },
          vAxis: {
            title: '사건 발생 수'
          },
        };

        var chart = new google.visualization.LineChart(document.getElementById('curve_chart4'));

        chart.draw(data, options);
      }
    </script>
